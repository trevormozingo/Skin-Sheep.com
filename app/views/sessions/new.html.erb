<% provide(:title, 'Login') %>
<h1>Login</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email , class: 'form-control' %>
      <br>
      <%= f.label :password %>
      <%= f.password_field :password , class: 'form-control' %>
      <br>
      <%= f.submit "Login", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
