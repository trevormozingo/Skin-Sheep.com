<div>
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@skin) do |f| %>
            <%= f.label :name %>
            <%= f.text_field :name , class: 'form-control' %>
            <br>
            <%= f.label :description %>
            <%= f.text_area :description , class: 'form-control' %>
            <br>
            <%= f.label :attachment%>
            <%= f.file_field :attachment %>
            <br>
            <%= f.radio_button :visibility, 1, :checked => true %>
            <%= f.label :visibility, 'Public' %>
            <br>
            <%= f.radio_button :visibility, 2, :checked => false %>
            <%= f.label :visibility, 'Private' %>
            <br>

            <div class="field">
              <%= f.hidden_field :user_id, :value => current_user.id %>
            </div>

            <%= f.submit "Upload", class: "btn btn-primary upload-btn" %>
        <% end %>
    </div>
</div>
