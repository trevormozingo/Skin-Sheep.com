<header class="navbar navbar-fixed-top navbar-inverse">
<div class="container">
  <!--<div id="logo-outline"></div>-->
    <div id="logo-img"></div>
    <!--<div id="logo-plus">+</div>
    <div id="logo-folder"></div>-->

  <% if current_user %>
    <%= link_to "Skin Sheep", uhome_path, id: "logo" %>
  <% else %>
    <%= link_to "Skin Sheep", root_path, id: "logo" %>
  <% end %>

  <nav>
    <ul class="nav navbar-nav navbar-right">
      <% if current_user %>
        <li><%= link_to "Home",   uhome_path %></li>
      <% else %>
